services:
  - type: web
    name: chatwave-backend
    runtime: python
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn app.main:app --host 0.0.0.0 --port $PORT
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: chatwave-db
          property: connectionString
      - key: REDIS_URL
        fromDatabase:
          name: chatwave-redis
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: OPENAI_API_KEY
        value: your_openai_api_key_here
      - key: CLOUDINARY_URL
        value: your_cloudinary_url_here
    autoDeploy: false

databases:
  - name: chatwave-db
    plan: free
    region: oregon

redis:
  - name: chatwave-redis
    plan: free
    region: oregon
